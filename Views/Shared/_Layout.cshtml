<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mexoft_site</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/main.css" rel="stylesheet" />
</head>
<body>
    <header >
        <nav  class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container HomeText">
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Mexoft_site</a>*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" >
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><span class="HomeText">Home - sweet home !!....</span></a>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" >
            &copy; 2020 - Mexoft.dk
            <span class="mof" style="float:right;color:lightgray" >_</span>
        </div>
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(function () {
            $(".mof").mouseover(function () {
                $(".mof").css("color", "lime");
                $(".mof").css("font-weight", "bold");
                $(".mof").css("font-size", "24px");
                $(".mof").text("___");
            });
            $(".mof").mouseout(function () {
                $(".mof").css("color", "lightgray");
                $(".mof").css("font-weight", "normal");
                $(".mof").css("font-size", "14px");
                $(".mof").text("_");
            });

             $(".mof").click(function(){
                 window.location.href="/home/sfj";
             });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
